<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
      <tr>
        <%= image_tag @user.get_image %>
      </tr>
      <tr>
        <th>name:<%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction:<%= @user.introduction %></th>
      </tr>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-gear"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_area :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group mt-2">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <%= @books.each do |book| %>
            <tr>
              <td>
                <%= link_to edit_user_path(book.user) do %>
                  <%= image_tag book.user.image.url || "default_user.jpg", alt: "User Profile Image", style: "width: 50p; height: 50px; border-radius: 50%;" %>
                <% end %>
              </td>
              <td>
                <%= link_to edit_book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>       
        </tbody>
      </table>
    </div>
  </div>
</div>

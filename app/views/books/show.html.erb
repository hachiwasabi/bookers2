
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list',user:@book.user, book:@book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <td>
            <td>
              <%= link_to user_path(@book.user), class: "d-block", style:"width: 100px;" do %>
                <%= image_tag @book.user.get_image(100,100), class:"rounded", style: "width: 100px; height: 100px; object-fit: cover;" %>
                
                <%= @book.user.name %>
                </span>
              <% end %>
            </td>
          </td>
          <td>
            <td>
              <%= link_to book_path(@book) do %>
                  <%= @book.title %>
              <% end %>
            </td>
          </td>
          <td>
            <td><%= @book.body %></td>
          </td>
          <td>
          <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
            <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-success" %>
          <% end %>
          </td>
        </thead>
      </table>
    </div>
  </div>
</div>
